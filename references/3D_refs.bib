	Eprint = {http://www.biorxiv.org/content/early/2017/06/27/156679.full.pdf},
	Journal = {bioRxiv},
	Publisher = {Cold Spring Harbor Labs Journals},
	Title = {GrapHi-C: Graph-based visualization of Hi-C Datasets},
