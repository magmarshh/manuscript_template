	Doi = {10.1111/tpj.13925},
	Journal = {Plant J},
	Journal-Full = {The Plant journal : for cell and molecular biology},
	Keywords = {Hi-C; Oryza sativa L; chromatin interaction; chromosome organization; hierarchical architecture},
	Month = {Jun},
	Number = {6},
